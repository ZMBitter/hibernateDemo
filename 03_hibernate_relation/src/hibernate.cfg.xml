    <!--<mapping resource="com/zm/n2n/both/Item.hbm.xml"/>-->
    <!--<mapping resource="com/zm/inherit/subclass/Person.hbm.xml"/>-->
    <!--<mapping resource="com/zm/inherit/joined/subclass/Person.hbm.xml"/>-->
